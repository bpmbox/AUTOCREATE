{
  "name": "copilot-supabase-monitor",
  "displayName": "Copilot Supabase Monitor",
  "description": "GitHub Copilot連携 - Supabase監視・自動処理拡張機能",
  "version": "1.0.0",
  "publisher": "autocreate",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Data Science"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilotSupabaseMonitor.startMonitoring",
        "title": "🚀 Supabase監視開始",
        "category": "Copilot Monitor"
      },
      {
        "command": "copilotSupabaseMonitor.stopMonitoring",
        "title": "🛑 Supabase監視停止",
        "category": "Copilot Monitor"
      },
      {
        "command": "copilotSupabaseMonitor.openSettings",
        "title": "⚙️ 監視設定",
        "category": "Copilot Monitor"
      },
      {
        "command": "copilotSupabaseMonitor.testConnection",
        "title": "🔍 接続テスト",
        "category": "Copilot Monitor"
      },
      {
        "command": "copilotSupabaseMonitor.manualProcess",
        "title": "🤖 手動処理実行",
        "category": "Copilot Monitor"
      }
    ],
    "configuration": {
      "title": "Copilot Supabase Monitor",
      "properties": {
        "copilotSupabaseMonitor.supabaseUrl": {
          "type": "string",
          "default": "https://rootomzbucovwdqsscqd.supabase.co",
          "description": "SupabaseプロジェクトURL"
        },
        "copilotSupabaseMonitor.supabaseKey": {
          "type": "string",
          "default": "",
          "description": "Supabase匿名キー"
        },
        "copilotSupabaseMonitor.pollingInterval": {
          "type": "number",
          "default": 5000,
          "description": "監視間隔（ミリ秒）"
        },
        "copilotSupabaseMonitor.autoResponse": {
          "type": "boolean",
          "default": true,
          "description": "自動応答を有効にする"
        },
        "copilotSupabaseMonitor.enableNotifications": {
          "type": "boolean",
          "default": true,
          "description": "通知を有効にする"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "copilotSupabaseMonitor",
          "name": "🤖 Copilot Supabase Monitor",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "copilotSupabaseMonitor.startMonitoring",
          "when": "view == copilotSupabaseMonitor",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "node-fetch": "^3.3.0",
    "ws": "^8.12.0"
  }
}
