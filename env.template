# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key_here

# JIRA Integration
JIRA_URL=your_jira_url_here
JIRA_USERNAME=your_jira_username_here
JIRA_API_TOKEN=your_jira_api_token_here
JIRA_PROJECT_KEY=your_project_key_here
JIRA_BOARD_ID=your_board_id_here

# Database Configuration
DATABASE_URL=sqlite:///./database/main.db
SQLITE_DATABASE_PATH=./database/

# n8n Integration Configuration
N8N_API_KEY=your_n8n_api_key_here
N8N_SERVER_URL=your_n8n_server_url_here
N8N_BASE_URL=your_n8n_base_url_here
N8N_API_URL=your_n8n_api_url_here

# Supabase PostgreSQL Configuration
POSTGRES_URL=your_postgres_url_here
POSTGRES_USER=your_postgres_user_here
POSTGRES_PASS=your_postgres_password_here
POSTGRES_HOST=your_postgres_host_here
POSTGRES_DB=your_postgres_database_here
POSTGRES_PORT=5432

# API Keys
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
HF_TOKEN=your_huggingface_token_here

# LINE Bot Configuration
LINE_CHANNEL_ACCESS_TOKEN=your_line_access_token_here
LINE_CHANNEL_SECRET=your_line_channel_secret_here
LINE_CHANNEL_ID=your_line_channel_id_here

# Google Configuration
GOOGLE_APPLICATION_CREDENTIALS_CONTENT='your_google_service_account_json_here'

# Webhook URLs
WEBHOOK_GAS=your_gas_webhook_url_here
WEBHOOK_URL=your_webhook_url_here
CHAT_URL=your_chat_url_here
N8N_HOOK=your_n8n_webhook_url_here

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_USER=your_github_username_here
GITHUB_REPO=your_github_repo_here

# AppSheet Configuration
APPSHEET_APPID=your_appsheet_app_id_here
APPSHEET_KEY=your_appsheet_key_here

# Application Configuration
DEBUG=true
LOG_LEVEL=DEBUG
ENVIRONMENT=development
